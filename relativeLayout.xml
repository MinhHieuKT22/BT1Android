<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="700dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/edText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="#e1e1e1"
            android:text="0"
            android:gravity="right"
            android:textSize="160sp" />

        <Button
            android:id="@+id/btn_CE"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_below="@+id/edText1"
            android:layout_marginTop="10dp"
            android:text="CE"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_C"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_below="@+id/edText1"
            android:layout_toRightOf="@+id/btn_CE"
            android:layout_alignTop="@+id/btn_CE"
            android:text="C"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_BS"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_below="@+id/edText1"
            android:layout_toRightOf="@+id/btn_C"
            android:layout_alignTop="@+id/btn_C"
            android:text="BS"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_Chia"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_below="@+id/edText1"
            android:layout_toRightOf="@+id/btn_BS"
            android:layout_alignTop="@+id/btn_BS"
            android:text="/"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_7"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_below="@+id/btn_CE"
            android:text="7"
            android:backgroundTint="#efefef"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_4"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_below="@+id/btn_7"
            android:text="4"
            android:backgroundTint="#efefef"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_1"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_below="@+id/btn_4"
            android:text="1"
            android:backgroundTint="#efefef"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_trucong"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_below="@+id/btn_1"
            android:text="+/-"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_8"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/btn_7"
            android:layout_alignTop="@+id/btn_7"
            android:text="8"
            android:backgroundTint="#efefef"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_9"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/btn_8"
            android:layout_alignTop="@+id/btn_8"
            android:text="9"
            android:backgroundTint="#efefef"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_nhan"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/btn_9"
            android:layout_alignTop="@+id/btn_9"
            android:text="X"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_5"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/btn_4"
            android:layout_alignTop="@+id/btn_4"
            android:text="5"
            android:backgroundTint="#efefef"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_6"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/btn_5"
            android:layout_alignTop="@+id/btn_5"
            android:text="6"
            android:backgroundTint="#efefef"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_tru"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/btn_6"
            android:layout_alignTop="@+id/btn_6"
            android:text="-"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_2"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/btn_1"
            android:layout_alignTop="@+id/btn_1"
            android:text="2"
            android:backgroundTint="#efefef"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_3"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/btn_2"
            android:layout_alignTop="@+id/btn_2"
            android:text="3"
            android:backgroundTint="#efefef"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_cong"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/btn_3"
            android:layout_alignTop="@+id/btn_3"
            android:text="+"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_khong"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/btn_trucong"
            android:layout_alignTop="@+id/btn_trucong"
            android:text="0"
            android:backgroundTint="#efefef"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_cham"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/btn_khong"
            android:layout_alignTop="@+id/btn_khong"
            android:text="."
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_bang"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/btn_cham"
            android:layout_alignTop="@+id/btn_cham"
            android:text="="
            android:textSize="20sp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
