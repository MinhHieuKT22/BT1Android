<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e1e1e1">

            <TextView
                android:id="@+id/edt_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="150sp"
                android:inputType="text"
                android:text="0"
                android:gravity="right"
                android:background="@android:color/transparent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btnCE"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:text="CE"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnC"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:text="C"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnBS"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:text="BS"
                    android:textSize="20sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnChia"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="/" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btnNumber7"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:backgroundTint="#efefef"
                    android:textSize="20sp"
                    android:text="7" />

                <Button
                    android:id="@+id/btnNumber8"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:backgroundTint="#efefef"
                    android:textSize="20sp"
                    android:text="8" />

                <Button
                    android:id="@+id/btnNumber9"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:backgroundTint="#efefef"
                    android:textSize="20sp"
                    android:text="9" />

                <Button
                    android:id="@+id/btnNhan"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="X" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btnNumber4"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:backgroundTint="#efefef"
                    android:textSize="20sp"
                    android:text="4" />

                <Button
                    android:id="@+id/btnNumber5"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:backgroundTint="#efefef"
                    android:textSize="20sp"
                    android:text="5" />

                <Button
                    android:id="@+id/btnNumber6"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:backgroundTint="#efefef"
                    android:textSize="20sp"
                    android:text="6" />

                <Button
                    android:id="@+id/btnTru"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="-" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btnNumber1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:backgroundTint="#efefef"
                    android:textSize="20sp"
                    android:text="1" />

                <Button
                    android:id="@+id/btnNumber2"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:backgroundTint="#efefef"
                    android:textSize="20sp"
                    android:text="2" />

                <Button
                    android:id="@+id/btnNumber3"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:backgroundTint="#efefef"
                    android:textSize="20sp"
                    android:text="3" />

                <Button
                    android:id="@+id/btnCong"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="+" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btnCongtru"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="+/-" />

                <Button
                    android:id="@+id/btnNumber0"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:backgroundTint="#efefef"
                    android:textSize="20sp"
                    android:text="0" />

                <Button
                    android:id="@+id/btnCham"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="." />

                <Button
                    android:id="@+id/btnBang"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="=" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
